
pkgname=arctic-backgrounds
pkgver=1.0
pkgrel=02
pkgdesc="Default wallpapers for ArcticOS"
url="https://github.com/arctic-os"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
groups=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+${url}/${pkgname}.git")
sha256sums=('SKIP')
package() {
	local _bgdir=${pkgdir}/usr/share/backgrounds
	mkdir -p "$_bgdir"
	cp -r "${srcdir}/${pkgname}"/* "$_bgdir"
}

