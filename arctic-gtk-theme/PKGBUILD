# Maintainer: Anil Beesetti <anilbeesetti@gmail.com>

pkgname=arctic-gtk-theme
pkgver=1.0
pkgrel=1
pkgdesc="Arctic GTK Theme"
url="https://github.com/arctic-os/arctic-themes"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
groups=(arctic-themes)
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../themes/. ${srcdir}
}

package() {
	local _themesdir=${pkgdir}/usr/share/themes
	mkdir -p "$_themesdir"
	cp -r ${srcdir}/* "$_themesdir"
}
